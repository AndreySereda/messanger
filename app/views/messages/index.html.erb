<p id="notice"><%= notice %></p>

<table>
  <thead>
  <tr>
    <th>Message</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @messages.each do |message| %>
    <tr id="<%=message.id%>">
      <td><%= message.text %></td>
      <td><%= link_to 'Show', message %></td>
      <td><%= link_to 'Edit', edit_message_path(message) %></td>
      <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, remote: true%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div id="new_message"></div>

<br>

<%= link_to 'New Message', new_message_path %>